<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Import a modern, clean font */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');

        /* Define colors and animations at the root for easy changes */
        :root {
            --glow-color-1: #00aaff;
            --glow-color-2: #ff00aa;
            --background-color: #0d0c1d;
            --surface-color: rgba(20, 18, 41, 0.7);
            --font-color: #e0e0ff;
            --subtle-font-color: #a0a0c0;
            --error-color: #ff4d4d;
        }

        /* Keyframes for the animated background gradient */
        @keyframes aurora-bg {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* --- General Body & Animated Background --- */
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            background: linear-gradient(-45deg, #0d0c1d, #1a183d, #2a286b, #1a183d);
            background-size: 400% 400%;
            animation: aurora-bg 15s ease infinite;
            color: var(--font-color);
            overflow-x: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 2rem;
        }
        
        /* --- Glassmorphism Panel --- */
        .auth-panel {
            width: 100%;
            max-width: 500px;
            background: var(--surface-color);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 25px;
            box-shadow: 0 0 30px rgba(0,0,0,0.3);
            padding: 2.5rem;
            text-align: center;
        }

        .auth-panel h2 {
            text-shadow: 0 0 8px var(--glow-color-1);
            margin-bottom: 1rem;
        }
        .auth-panel p {
            color: var(--subtle-font-color);
            margin-bottom: 2rem;
        }

        /* --- Form Styles --- */
        .form-control {
            background: rgba(0,0,0,0.2) !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.75rem 1rem;
            color: var(--font-color) !important;
            font-size: 1rem;
            text-align: left;
            margin-bottom: 1.5rem;
            width: 100%;
        }
        
        .form-control:focus {
            background: rgba(0,0,0,0.3);
            outline: none;
            box-shadow: 0 0 15px var(--glow-color-1);
            border-color: var(--glow-color-1);
        }
        
        /* --- Submit Button --- */
        .btn-submit {
            width: 100%;
            padding: 0.8rem 2rem;
            border-radius: 12px;
            background-color: var(--glow-color-2);
            color: #fff;
            font-weight: 700;
            text-decoration: none;
            border: none;
            box-shadow: 0 0 20px var(--glow-color-2);
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .btn-submit:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 0 30px var(--glow-color-2);
        }
        .btn-submit:disabled {
            opacity: 0.5;
            cursor: wait;
            transform: none;
        }

        /* --- Toast Notification for Errors --- */
        .toast-notification {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%) translateY(100px);
            background: var(--surface-color);
            backdrop-filter: blur(10px);
            color: var(--font-color);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--glow-color-2);
            box-shadow: 0 0 20px var(--glow-color-2);
            z-index: 9999;
            opacity: 0;
            transition: transform 0.5s ease, opacity 0.5s ease;
        }
        .toast-notification.show {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
    </style>
</head>
<body>

<div class="auth-panel">
    <h2>Reset Password</h2>
    <p>Please enter your new password below. Make sure it's secure.</p>
    
    <div id="error-message" style="color: var(--error-color); margin-bottom: 1.5rem; font-weight: 500;"></div>

    <form id="reset-password-form" method="POST" action="/reset-password">
        <input type="password" name="password" id="password" class="form-control" placeholder="New Password" required />
        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm New Password" required />
        <button type="submit" class="btn-submit">Set New Password</button>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- Reusable function for toast messages ---
        const showToast = (message) => {
            document.querySelectorAll('.toast-notification').forEach(t => t.remove());
            const toast = document.createElement('div');
            toast.className = 'toast-notification';
            toast.textContent = message;
            document.body.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => {
                toast.classList.remove('show');
                toast.addEventListener('transitionend', () => toast.remove());
            }, 3000);
        };

        // Get token from URL query
        const urlParams = new URLSearchParams(window.location.search);
        const token = urlParams.get('token');
      
        const form = document.getElementById('reset-password-form');
        const errorMessage = document.getElementById('error-message');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const passwordField = form.password;
            const confirmField = form.confirmPassword;
            const submitButton = form.querySelector('.btn-submit');
      
            const password = passwordField.value;
            const confirmPassword = confirmField.value;

            errorMessage.textContent = ''; // Clear previous errors

            // Check password length
            if(password.length < 8) {
                showToast("Password must be at least 8 characters long.");
                return;
            }

            // Check if passwords match
            if(password !== confirmPassword) {
                showToast("Passwords do not match.");
                return;
            }

            submitButton.disabled = true;
            submitButton.textContent = 'Resetting...';
      
            try {
                const res = await fetch(form.action, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password, token })
                });
      
                const data = await res.json();
                if(res.ok) {
                    showToast('Password reset successfully! Redirecting...');
                    setTimeout(() => {
                        window.location.href = "/login-page"; 
                    }, 2000);
                } else {
                    // Show server error in the persistent message div
                    errorMessage.textContent = data.error || "Error resetting password. The link may have expired.";
                }
            } catch (err) {
                console.error("Error:", err);
                showToast("Could not connect to the server.");
            } finally {
                // Only re-enable if there wasn't a success
                if (!errorMessage.textContent && !document.querySelector('.toast-notification.show')) {
                    submitButton.disabled = false;
                    submitButton.textContent = 'Set New Password';
                }
            }
        });
    });
</script>

</body>
</html>
