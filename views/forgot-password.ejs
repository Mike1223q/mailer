<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Forgot Password</title>
    <!-- Note: Bootstrap CSS is not strictly necessary with the new styling, but kept for potential fallbacks or other components -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        /* Import a modern, clean font */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');

        /* Define colors and animations at the root for easy changes */
        :root {
            --glow-color-1: #00aaff;
            --glow-color-2: #ff00aa;
            --background-color: #0d0c1d;
            --surface-color: rgba(20, 18, 41, 0.7);
            --font-color: #e0e0ff;
            --subtle-font-color: #a0a0c0;
            --error-color: #ff4d4d;
        }

        /* Keyframes for the animated background gradient */
        @keyframes aurora-bg {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* --- General Body & Animated Background --- */
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            background: linear-gradient(-45deg, #0d0c1d, #1a183d, #2a286b, #1a183d);
            background-size: 400% 400%;
            animation: aurora-bg 15s ease infinite;
            color: var(--font-color);
            overflow-x: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 2rem;
        }
        
        /* --- Glassmorphism Panel --- */
        .auth-panel {
            width: 100%;
            max-width: 500px;
            background: var(--surface-color);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 25px;
            box-shadow: 0 0 30px rgba(0,0,0,0.3);
            padding: 2.5rem;
            text-align: center;
        }

        .auth-panel h2 {
            text-shadow: 0 0 8px var(--glow-color-1);
            margin-bottom: 1rem;
        }
        .auth-panel p {
            color: var(--subtle-font-color);
            margin-bottom: 2rem;
        }

        /* --- Form Styles --- */
        .form-control {
            background: rgba(0,0,0,0.2) !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.75rem 1rem;
            color: var(--font-color) !important;
            font-size: 1rem; /* Adjusted for email */
            text-align: left; /* Email should be left-aligned */
            margin-bottom: 1.5rem;
            width: 100%;
        }
        
        /* Specific styles for the code input */
        #fp-code {
            font-size: 1.5rem;
            text-align: center;
            letter-spacing: 0.5rem;
        }

        .form-control:focus {
            background: rgba(0,0,0,0.3);
            outline: none;
            box-shadow: 0 0 15px var(--glow-color-1);
            border-color: var(--glow-color-1);
        }
        
        /* --- Submit Button --- */
        .btn-submit {
            width: 100%;
            padding: 0.8rem 2rem;
            border-radius: 12px;
            background-color: var(--glow-color-2);
            color: #fff;
            font-weight: 700;
            text-decoration: none;
            border: none;
            box-shadow: 0 0 20px var(--glow-color-2);
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .btn-submit:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 0 30px var(--glow-color-2);
        }
        .btn-submit:disabled {
            opacity: 0.5;
            cursor: wait;
            transform: none; /* Disable hover effects when disabled */
        }

        /* --- Toast Notification for Errors --- */
        .toast-notification {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%) translateY(100px);
            background: var(--surface-color);
            backdrop-filter: blur(10px);
            color: var(--font-color);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--glow-color-2);
            box-shadow: 0 0 20px var(--glow-color-2);
            z-index: 9999;
            opacity: 0;
            transition: transform 0.5s ease, opacity 0.5s ease;
        }
        .toast-notification.show {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
    </style>
</head>
<body>

    <div class="auth-panel">
        <h2 id="form-title">Forgot Password</h2>
        <p id="form-description">Enter your email address and we'll send you a code to reset your password.</p>
        
        <div id="error-message" style="color: var(--error-color); margin-bottom: 1.5rem; font-weight: 500;"></div>

        <!-- Step 1: Enter Email -->
        <form id="email-form">
            <input type="email" name="email" id="fp-email" class="form-control" placeholder="Enter your email" required />
            <button type="submit" class="btn-submit">Send Code</button>
        </form>

        <!-- Step 2: Verify Code -->
        <form id="code-form" class="d-none">
            <input type="text" name="code" id="fp-code" class="form-control" placeholder="------" maxlength="6" required />
            <button type="submit" class="btn-submit">Verify Code</button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const emailForm = document.getElementById('email-form');
            const codeForm = document.getElementById('code-form');
            const title = document.getElementById('form-title');
            const description = document.getElementById('form-description');
            const errorMessage = document.getElementById('error-message');
            
            let userEmail = '';

            // --- Reusable function for toast messages ---
            const showToast = (message) => {
                // Remove any existing toasts first
                document.querySelectorAll('.toast-notification').forEach(t => t.remove());
                
                const toast = document.createElement('div');
                toast.className = 'toast-notification';
                toast.textContent = message;
                document.body.appendChild(toast);
                // Delay to allow element to be added to DOM before transition
                setTimeout(() => toast.classList.add('show'), 100);
                // Hide and remove after 3 seconds
                setTimeout(() => {
                    toast.classList.remove('show');
                    toast.addEventListener('transitionend', () => toast.remove());
                }, 3000);
            };

            // Step 1: Send reset code
            emailForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const emailInput = document.getElementById('fp-email');
                const submitButton = emailForm.querySelector('.btn-submit');
                
                errorMessage.textContent = ''; // Clear persistent errors
                submitButton.disabled = true;
                submitButton.textContent = 'Sending...';

                try {
                    const res = await fetch('/forgot-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: emailInput.value }),
                    });
                    
                    const data = await res.json();

                    if (!res.ok) {
                        // For 429 (rate limit), show a persistent message
                        if (res.status === 429) {
                            errorMessage.textContent = data.error || 'Too many attempts. Please try again later.';
                            emailInput.disabled = true; // Optionally disable input on lockout
                        } else {
                            // For other errors, show a temporary toast
                            showToast(data.error || 'An unknown error occurred.');
                        }
                        return; // Stop execution
                    }

                    // On success
                    userEmail = emailInput.value;
                    emailForm.classList.add('d-none');
                    codeForm.classList.remove('d-none');
                    title.textContent = 'Check Your Email';
                    description.textContent = `We've sent a 6-digit code to ${userEmail}. Please enter it below.`;

                } catch (err) {
                    console.error('Error sending code:', err);
                    showToast('Could not connect to the server.');
                } finally {
                    // Re-enable button unless locked out
                    if (errorMessage.textContent === '') {
                        submitButton.disabled = false;
                        submitButton.textContent = 'Send Code';
                    }
                }
            });

            // Step 2: Verify code
            codeForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const codeInput = document.getElementById('fp-code');
                const submitButton = codeForm.querySelector('.btn-submit');

                if (codeInput.value.length < 6) {
                    showToast('Please enter a valid 6-digit code.');
                    return;
                }

                errorMessage.textContent = ''; // Clear persistent errors
                submitButton.disabled = true;
                submitButton.textContent = 'Verifying...';

                try {
                    const res = await fetch('/forgot-password/verify', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: userEmail, code: codeInput.value }),
                    });
                    
                    const data = await res.json();

                    if (!res.ok) {
                         if (res.status === 429) {
                            errorMessage.textContent = data.error || 'Too many attempts. Please try again later.';
                            codeInput.disabled = true;
                        } else {
                            showToast(data.error || 'Invalid or expired code.');
                        }
                        return;
                    }

                    // On success
                    showToast('Code verified! Redirecting...');
                    // The server should respond with a token to use in the URL
                    setTimeout(() => {
                        window.location.href = `/reset-password?token=${data.token}`;
                    }, 1500);

                } catch (err) {
                    console.error('Error verifying code:', err);
                    showToast('Could not connect to the server.');
                } finally {
                     if (errorMessage.textContent === '') {
                        submitButton.disabled = false;
                        submitButton.textContent = 'Verify Code';
                    }
                }
            });
        });
    </script>

</body>
</html>
