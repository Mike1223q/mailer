            color: #00ff87;
        }
        .badge-unverified {
            background-color: rgba(255, 180, 0, 0.1);
            color: #ffb400;
        }
        
        .btn-verify {
            background: rgba(0, 170, 255, 0.1);
            border: 1px solid var(--glow-color-1);
            color: var(--glow-color-1);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            text-decoration: none;
            cursor: pointer;
            font-weight: 500;
            white-space: nowrap;
            transition: all 0.2s ease;
        }
        .btn-verify:hover {
            background: var(--glow-color-1);
            color: var(--background-color);
            box-shadow: 0 0 10px var(--glow-color-1);
        }

        /* --- Editable Interests --- */
        .interests-editor .tags-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            padding: 0.75rem;
            background: rgba(0,0,0,0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            margin-bottom: 0.5rem;
            min-height: 50px;
        }
        .interest-tag-editable {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(0, 170, 255, 0.1);
            color: var(--glow-color-1);
            border: 1px solid var(--glow-color-1);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 700;
            transition: all 0.2s ease;
        }
        .interest-tag-editable:hover {
            background: var(--glow-color-1);
            color: var(--background-color);
            box-shadow: 0 0 10px var(--glow-color-1);
        }
        .remove-tag-btn {
            background: none;
            border: none;
            color: inherit;
            opacity: 0.7;
            cursor: pointer;
            padding: 0;
        }
        .remove-tag-btn:hover {
            opacity: 1;
        }
        #add-interest-btn {
            background: none;
            border: 1px dashed var(--subtle-font-color);
            color: var(--subtle-font-color);
            border-radius: 20px;
            padding: 0.25rem 1rem;
            transition: all 0.2s ease;
        }
        #add-interest-btn:hover {
            background: var(--glow-color-1);
            border-color: var(--glow-color-1);
            color: var(--background-color);
        }

        /* --- Address with Security Shield --- */
        .address-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .security-shield {
            position: relative;
            cursor: pointer;
            color: var(--subtle-font-color);
        }
        .security-tooltip {
            position: absolute;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            width: 250px;
            background: var(--surface-color);
            border: 1px solid var(--glow-color-1);
            padding: 1rem;
            border-radius: 10px;
            box-shadow: 0 0 15px var(--glow-color-1);
            font-size: 0.9rem;
            text-align: center;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s, visibility 0.3s;
            z-index: 10;
        }
        .security-shield:hover .security-tooltip {
            opacity: 1;
            visibility: visible;
        }
        
        .autocomplete-suggestions {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: var(--surface-color);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            margin-top: 5px;
            z-index: 100;
            max-height: 200px;
            overflow-y: auto;
        }
        .suggestion-item {
            padding: 0.75rem 1rem;
            cursor: pointer;
            color: var(--subtle-font-color);
        }
        .suggestion-item:hover {
            background: var(--glow-color-1);
            color: var(--background-color);
        }


        /* --- Save Button --- */
        .btn-save {
            width: 100%;
            padding: 0.8rem 2rem;
            border-radius: 12px;
            background-color: var(--glow-color-2);
            color: #fff;
            font-weight: 700;
            text-decoration: none;
            border: none;
            box-shadow: 0 0 20px var(--glow-color-2);
            transition: all 0.3s ease;
            margin-top: 1rem;
        }
        .btn-save:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 0 30px var(--glow-color-2);
        }
        .btn-save:disabled {
            opacity: 0.5;
            cursor: wait;
        }

        /* --- Toast Notification for Errors --- */
        .toast-notification {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%) translateY(100px);
            background: var(--surface-color);
            backdrop-filter: blur(10px);
            color: var(--font-color);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--glow-color-2);
            box-shadow: 0 0 20px var(--glow-color-2);
            z-index: 9999;
            opacity: 0;
            transition: transform 0.5s ease, opacity 0.5s ease;
        }
        .toast-notification.show {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }

        /* --- Styles for Modals --- */
        .modal-content {
            background: var(--surface-color);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 25px;
            color: var(--font-color);
        }
        .modal-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
