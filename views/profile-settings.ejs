        /* Import a modern, clean font */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');

        /* Define colors and animations at the root for easy changes */
        :root {
            --glow-color-1: #00aaff;
            --glow-color-2: #ff00aa;
            --background-color: #0d0c1d;
            --surface-color: rgba(20, 18, 41, 0.7);
            --font-color: #e0e0ff;
            --subtle-font-color: #a0a0c0;
        }

        /* Keyframes for the animated background gradient */
        @keyframes aurora-bg {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* --- General Body & Animated Background --- */
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            background: linear-gradient(-45deg, #0d0c1d, #1a183d, #2a286b, #1a183d);
            background-size: 400% 400%;
            animation: aurora-bg 15s ease infinite;
            color: var(--font-color);
            overflow-x: hidden;
        }

        /* --- Main Content Area --- */
        #main-content {
            /* Account for sidebar width */
            margin-left: 90px;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        /* Adjust main content when sidebar is hovered */
        #sidebar:hover ~ #main-content {
            margin-left: 260px;
        }

        /* --- Glassmorphism Settings Panel --- */
        .settings-panel {
            width: 100%;
            max-width: 800px;
            background: var(--surface-color);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 25px;
            box-shadow: 0 0 30px rgba(0,0,0,0.3);
            padding: 2.5rem;
        }

        .settings-panel h2 {
            text-shadow: 0 0 8px var(--glow-color-1);
            margin-bottom: 2rem;
            text-align: center;
        }

        /* --- Avatar & Gender Section --- */
        .profile-header {
            display: flex;
            align-items: center;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        .avatar-container {
            position: relative;
            cursor: pointer;
        }
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 3px solid var(--glow-color-1);
            object-fit: cover;
        }
        .avatar-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .avatar-container:hover .avatar-overlay {
            opacity: 1;
        }
        .gender-selection {
            flex-grow: 1;
        }
        .gender-options {
            display: flex;
            gap: 1rem;
        }
        .gender-option {
            flex: 1;
            padding: 1rem;
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        .gender-option:hover {
            border-color: var(--glow-color-1);
        }
        .gender-option.selected {
            border-color: var(--glow-color-2);
            box-shadow: 0 0 15px var(--glow-color-2);
            color: var(--glow-color-2);
        }
        .gender-option i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        /* --- Form Styles --- */
        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }
        .form-label {
            font-weight: 500;
            color: var(--subtle-font-color);
            margin-bottom: 0.5rem;
        }
        .form-control {
            background: rgba(0,0,0,0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.75rem 1rem;
            color: var(--font-color) !important;
            font-size: 1rem;
            transition: border-color 0.2s, box-shadow 0.2s;
        }
        .form-control:focus {
            background: rgba(0,0,0,0.3);
            outline: none;
            box-shadow: 0 0 15px var(--glow-color-1);
            border-color: var(--glow-color-1);
        }
        .form-control.is-invalid {
            border-color: var(--glow-color-2);
            box-shadow: 0 0 15px var(--glow-color-2);
        }
        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }
        .form-control:disabled {
            background-color: rgba(0,0,0,0.4);
            opacity: 0.5;
        }
        .form-text {
            color: var(--subtle-font-color);
            font-size: 0.85rem;
            padding-left: 0.25rem;
        }

        /* --- Final, most forceful fix for autofill styles --- */
        input:-webkit-autofill,
        input:-webkit-autofill:hover, 
        input:-webkit-autofill:focus, 
        input:-webkit-autofill:active,
        textarea:-webkit-autofill,
        textarea:-webkit-autofill:hover,
        textarea:-webkit-autofill:focus,
