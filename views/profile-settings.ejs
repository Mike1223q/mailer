            const verificationBadge = document.getElementById('verification-badge');
            const verifyBtn = document.getElementById('verify-btn');
            const avatarContainer = document.getElementById('avatar-container');
            const profileAvatar = document.getElementById('profile-avatar');
            const genderOptions = document.querySelectorAll('.gender-option');

            // --- Reusable Functions ---
            const showToast = (message) => {
                const toast = document.createElement('div');
                toast.className = 'toast-notification';
                toast.textContent = message;
                document.body.appendChild(toast);
                setTimeout(() => toast.classList.add('show'), 100);
                setTimeout(() => {
                    toast.classList.remove('show');
                    toast.addEventListener('transitionend', () => toast.remove());
                }, 3000);
            };

            const renderTags = () => {
                tagsContainer.innerHTML = '';
                userInterests.forEach(interest => {
                    const tagElement = document.createElement('span');
                    tagElement.className = 'interest-tag-editable';
                    tagElement.innerHTML = `${interest} <button type="button" class="remove-tag-btn" data-interest="${interest}">&times;</button>`;
                    tagsContainer.appendChild(tagElement);
                });
                const addButton = document.createElement('button');
                addButton.type = 'button';
                addButton.id = 'add-interest-btn';
                addButton.textContent = '+ Add';
                addButton.addEventListener('click', openInterestsModal);
                tagsContainer.appendChild(addButton);
            };

            const openInterestsModal = () => {
                tempSelectedInterests = [];
                interestsListModal.innerHTML = ''; 
                const availableInterests = ALL_INTERESTS.filter(i => !userInterests.includes(i));
                availableInterests.forEach(interest => {
                    const choiceElement = document.createElement('button');
                    choiceElement.type = 'button';
                    choiceElement.className = 'interest-choice';
                    choiceElement.textContent = interest;
                    choiceElement.dataset.interest = interest;
                    interestsListModal.appendChild(choiceElement);
                });
                interestsModal.show();
            };

            const toggleAddressField = () => {
                addressInput.disabled = !wantsMailSwitch.checked;
                if (!wantsMailSwitch.checked) {
                    addressInput.value = '';
                }
            };
            
            const populateForm = (userData) => {
                // NEW: Populate sidebar
                document.getElementById('sidebar-avatar').src = userData.avatar || 'https://placehold.co/60x60/FFFFFF/000000?text=User';
                document.getElementById('sidebar-name').textContent = userData.name || 'User';
                
                // Apply premium gradient to sidebar name if user has premium
                const sidebarName = document.getElementById('sidebar-name');
                if (sidebarName) {
                    if (userData.premium) {
                        sidebarName.classList.add('premium-name-gradient');
                    } else {
                        sidebarName.classList.remove('premium-name-gradient');
                    }
                }

                nameInput.value = userData.name || '';
                document.getElementById('dob').value = userData.dob || '';
                document.getElementById('email').value = userData.email || '';
                bioTextarea.value = userData.bio || '';
                
                if (typeof userData.interests === 'string') {
                    try {
                        userInterests = JSON.parse(userData.interests) || [];
                    } catch (e) {
                        console.error("Could not parse interests:", e);
                        userInterests = [];
                    }
                } else {
                    userInterests = userData.interests || [];
                }
                addressInput.value = userData.address || '';

                wantsMailSwitch.checked = userData.wantsPhysicalMail;
                
                if (userData.email_verified) {
                    verificationBadge.textContent = 'Verified';
                    verificationBadge.classList.remove('badge-unverified');
                    verificationBadge.classList.add('badge-verified');
                    verifyBtn.style.display = 'none';
                }
                
                selectedGender = userData.gender || null;
                selectedAvatarUrl = userData.avatar || 'https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=200&auto=format&fit=crop';
                profileAvatar.src = selectedAvatarUrl;
                genderOptions.forEach(opt => {
                    opt.classList.remove('selected');
                    if (opt.dataset.gender === selectedGender) {
                        opt.classList.add('selected');
                    }
                });

                renderTags();
                toggleAddressField();
            };

            const openAvatarModal = () => {
                if (!selectedGender) {
                    showToast('Please select a gender first to see relevant avatars.');
                    return;
                }
                avatarListModal.innerHTML = '';
                const avatarList = selectedGender === 'male' ? MALE_AVATARS : FEMALE_AVATARS;
                avatarList.forEach(url => {
                    const img = document.createElement('img');
                    img.src = url;
                    img.className = 'avatar-choice';
                    img.addEventListener('click', () => {
                        selectedAvatarUrl = url;
                        profileAvatar.src = url;
                        avatarModal.hide();
                    });
                    avatarListModal.appendChild(img);
                });
                avatarModal.show();
            };
            
            const getAddressSuggestions = async (input) => {
                if (input.length < 3) {
                    clearSuggestions();
                    return;
                }
                try {
                    const res = await fetch('/api/address-autocomplete', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ input })
                    });
                    if (!res.ok) return;
                    const suggestions = await res.json();
                    displaySuggestions(suggestions);
                } catch (err) {
                    console.error("Address autocomplete error:", err);
                }
            };

            const displaySuggestions = (suggestions) => {
                clearSuggestions();
                const suggestionsContainer = document.createElement('div');
                suggestionsContainer.className = 'autocomplete-suggestions';
                suggestions.forEach(suggestion => {
                    const item = document.createElement('div');
                    item.className = 'suggestion-item';
                    item.textContent = suggestion.description;
                    item.addEventListener('click', () => {
                        addressInput.value = suggestion.description;
                        clearSuggestions();
                    });
                    suggestionsContainer.appendChild(item);
                });
                addressInput.parentNode.appendChild(suggestionsContainer);
            };

            const clearSuggestions = () => {
                const existingSuggestions = addressInput.parentNode.querySelector('.autocomplete-suggestions');
                if (existingSuggestions) {
                    existingSuggestions.remove();
                }
            };

            // --- Event Listeners ---
            verifyBtn.addEventListener('click', () => {
                verifyBtn.disabled = true;
                verifyBtn.textContent = 'Redirecting...';
                window.location.href = '/verify-email';
            });

            interestsListModal.addEventListener('click', (e) => {
                if (e.target.classList.contains('interest-choice')) {
                    const button = e.target;
                    const interest = button.dataset.interest;
                    button.classList.toggle('selected');
                    if (tempSelectedInterests.includes(interest)) {
                        tempSelectedInterests = tempSelectedInterests.filter(i => i !== interest);
                    } else {
                        tempSelectedInterests.push(interest);
                    }
                }
            });

            doneSelectingBtn.addEventListener('click', () => {
                userInterests = [...new Set([...userInterests, ...tempSelectedInterests])];
                renderTags();
                interestsModal.hide();
            });

            tagsContainer.addEventListener('click', (e) => {
                if (e.target.classList.contains('remove-tag-btn')) {
                    if (userInterests.length > 3) {
                        const interestToRemove = e.target.dataset.interest;
                        userInterests = userInterests.filter(interest => interest !== interestToRemove);
                        renderTags();
                    } else {
                        showToast('You must have at least 3 interests.');
                    }
                }
            });

            wantsMailSwitch.addEventListener('change', toggleAddressField);

            addressInput.addEventListener('input', () => {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    getAddressSuggestions(addressInput.value);
                }, 300);
            });

            document.addEventListener('click', (e) => {
                if (e.target.id !== 'address') {
                    clearSuggestions();
                }
            });

            [nameInput, bioTextarea, addressInput].forEach(input => {
                input.addEventListener('input', () => {
                    if (input.classList.contains('is-invalid')) {
                        input.classList.remove('is-invalid');
                    }
                });
            });
            
            genderOptions.forEach(option => {
                option.addEventListener('click', () => {
                    genderOptions.forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    selectedGender = option.dataset.gender;
                });
            });

            avatarContainer.addEventListener('click', openAvatarModal);

            profileForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const name = nameInput.value.trim();
                const dob = document.getElementById('dob').value;
                const bio = bioTextarea.value.trim();
                const address = addressInput.value.trim();
                const dobYear = dob ? new Date(dob).getFullYear() : 0;

                if (!name) { showToast('Please enter your full name.'); return; }
                if (!dob) { showToast('Please enter your date of birth.'); return; }
                if (dobYear < 1925) { showToast('Please enter a valid year of birth (1925 or later).'); return; }
                if (bio.split(/\s+/).length < 25) { showToast('Your bio must be at least 25 words long.'); return; }
                if (userInterests.length < 3) { showToast('Please select at least 3 interests.'); return; }
                if (!address && wantsMailSwitch.checked) { showToast('Please provide a mailing address or opt out.'); return; }
                if (!selectedGender) { showToast('Please select a gender.'); return; }

                const formData = {
                    name, dob, bio,
                    email: document.getElementById('email').value,
                    interests: userInterests,
                    address: address,
                    wantsPhysicalMail: wantsMailSwitch.checked,
                    gender: selectedGender,
                    avatar: selectedAvatarUrl
                };
                
                saveButton.disabled = true;

                try {
                    const res = await fetch(profileForm.action, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData) 
                    });

                    const data = await res.json();

                    if (res.ok) {
                        window.location.href = "/dashboard";
                    } else {
                        const errorMessage = data.error ? data.error.toLowerCase() : "";
                        showToast(data.error || "An unknown error occurred.");

                        if (errorMessage.includes('inappropriate')) {
                            bioTextarea.classList.add('is-invalid');
                            nameInput.classList.add('is-invalid');
                            addressInput.classList.add('is-invalid');
                        }
                    }
                } catch (err) {
                    alert(err);
                    console.error("Error submitting form:", err);
                    showToast("Could not connect to the server. Please try again later.");
                } finally {
                    saveButton.disabled = false;
                }
            });

            // --- INITIALIZATION ---
            try {
                console.log('Fetching user profile...');
                const response = await fetch('/api/getUserProfile');
                console.log('Response status:', response.status);
                
                if (!response.ok) {
                    if (response.status === 401) {
                        console.log('User not authenticated, redirecting to login');
                        window.location.href = '/login-page';
                        return;
                    }
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const userData = await response.json();
                console.log('User data loaded successfully:', userData);
                populateForm(userData);
                
                // Also update the sidebar to ensure premium status is applied
                const sidebarName = document.getElementById('sidebar-name');
                if (sidebarName && userData.premium) {
                    sidebarName.classList.add('premium-name-gradient');
                }
                
                // Update notification badge
                try {
                    const unreadResponse = await fetch('/api/unread-counts');
                    if (unreadResponse.ok) {
                        const unreadData = await unreadResponse.json();
                        const notificationBadge = document.getElementById('sidebar-notification-badge');
                        
                        if (notificationBadge) {
                            if (unreadData.hasUnread && unreadData.unreadByType.total > 0) {
                                notificationBadge.textContent = unreadData.unreadByType.total;
                                notificationBadge.classList.remove('d-none');
                            } else {
                                notificationBadge.classList.add('d-none');
                            }
                        }
                    }
                } catch (error) {
                    console.error('Error updating notification badge:', error);
                }
            } catch (error) {
                console.error('Failed to load profile:', error);
                
                // Check if it's a network error or server error
                if (error.name === 'TypeError' && error.message.includes('fetch')) {
                    showToast('Network error. Please check your connection and refresh the page.');
                } else if (error.message && error.message.includes('401')) {
                    console.log('Authentication error, redirecting to login');
                    window.location.href = '/login-page';
                } else {
                    showToast('Failed to load profile. Please refresh the page.');
                }
            }
        });
    </script>

